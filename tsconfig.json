{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES6",
    "outDir": "dist/js",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "removeComments": true,
    "strictNullChecks": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": [
    "app/**/*"
  ]
}
